<div id="reviews_<%= review.reviewable.url_hash %>" class="review bg-white shadow-md rounded-md p-4 mb-4">
  <div class="rating mb-2">
    <% if review.rating.present? %>
      <% review.rating.times do %>
        ★
      <% end %>
    <% else %>
      評価がありません
    <% end %>
  </div>
  <div class="content mb-2">
    <%= review.comment %>
  </div>
  <div class="author text-sm text-gray-500">
    <%= review.user.name %>
  </div>
</div>
