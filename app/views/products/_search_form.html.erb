<%= search_form_for q, url: url do |f| %>
  <%# フリーワード検索 %>
  <label class="input input-bordered flex items-center gap-2">
    <%= f.text_field :name_or_description_cont, placeholder: 'フリーワード検索', class: "grow form-input" %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
      <path fill-rule="evenodd" d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z" clip-rule="evenodd" />
    </svg>
  </label>

  <%# 商品ジャンルで絞り込み %>
  <%= f.select :category_eq, options_for_select(ProductDecorator.category_options, include_blank: 'ジャンルを選択'), {}, class:"form-select" %>

  <%# 価格帯で絞り込み %>
  <%= select_tag :price_range, options_for_select(ProductDecorator.price_range_options, selected: params[:price_range]), include_blank: '価格帯を選択', class: 'form-select' %>

  <%= f.submit "検索", class: "btn btn-secondary" %>
<% end%>