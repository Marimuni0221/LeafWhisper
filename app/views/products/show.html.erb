<h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>

<div class="flex flex-col md:flex-row">
  <% if @product.item_image_url.present? %>
    <div class="md:w-1/2">
      <%= image_tag @product.item_image_url, alt: @product.name, class: "w-full h-auto object-cover" %>
    </div>
  <% end %>

  <div class="md:w-1/2 md:pl-8">
    <p class="text-gray-700 mb-4"><%= @product.description %></p>
    <p class="text-green-500 font-bold text-2xl mb-4"><%= number_to_currency(@product.price) %></p>
    <%= link_to "商品ページへ", @product.item_url, class: "text-blue-500 underline", target: "_blank" %>
  </div>
</div>
