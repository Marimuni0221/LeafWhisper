<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center mb-6"><%= t('.change_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field flex flex-col mb-4">
        <%= f.label :password, t('.new_password'), class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm" %>
      </div>

      <div class="field flex flex-col mb-4">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm" %>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), class: "w-full py-2 px-4 bg-secondary text-gray-700 font-bold rounded-md hover:bg-emerald-200 focus:outline-none focus:ring-2 focus:ring-indigo-500", id: "no-double_click-button" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to t('devise.shared.links.back'), :back, class: "text-indigo-500 hover:underline" %>
    </div>
  </div>
</div>

