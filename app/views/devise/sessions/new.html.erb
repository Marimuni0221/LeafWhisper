<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center mb-6"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field flex flex-col">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm" %>
      </div>

      <div class="field flex flex-col">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <a href="#" class="text-sm text-blue-500 hover:underline">パスワードをお忘れですか？</a>
        </div> 
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "w-full py-2 px-4 bg-secondary text-white font-bold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
 
    <div class="flex items-center my-4">
      <div class="flex-grow border-t border-gray-300"></div>
        <span class="mx-2 text-sm text-gray-400">Or continue with</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <div class="flex space-x-4 justify-center">
      <button class="w-1/2 py-2 px-4 border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-opacity-50 flex items-center justify-center">
        <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="h-5 w-5 mr-2" />
        Google
      </button>
    </div>

    <p class="mt-4 text-sm text-center text-gray-500">
      アカウントをお持ちではない方は<%= link_to 'こちら', new_user_registration_path, class: "text-blue-500 hover:underline"  %>
  </div>
</div>

<%= render "devise/shared/links" %>
